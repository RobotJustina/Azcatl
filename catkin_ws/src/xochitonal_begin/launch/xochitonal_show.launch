<!-- 	FACULTAD DE INGENIERIA
	Laboratorio de Biorobotica 
	DANIEL GARCÉS MARÍN
	Launch para iniciar los nodos para recibir instrucciones por medio de la app de Smart Things, ademas de presentar una opción de comportamiento se seguimiento de luz.
		"XOCHITONAL":: V2

	Ultima versión: 12 de Diciembre 2018	-->
	
<launch>

	<group ns="hardware">
<!--	ダ・ガ・マ・jû-san		-->
		<node name="sensor_node" pkg="sensor" type="sensor_node" output="screen" />
<!--	Inicializar nodo <node name="xovhitonal_arduino_node"/> con la siguiente configuración en la raspberry-->
		<node pkg="rosserial_python" type="serial_node.py" name="serial_node">
		<param name="port" value="/dev/ttyACM1"/>
		<param name="baud" value="500000"/>
		</node>
	</group>

	<group ns="software">
		<node name="xochitonal_show" pkg="xochitonal" type="xochitonal_show" output="screen" />
		<node name="smart_things_node" pkg="smart_things" type="smart_things_node.py" output="screen" />
	</group>

</launch>